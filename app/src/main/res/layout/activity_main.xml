<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="#FFFFFF">

    <!-- موجودی کیف پول -->
    <LinearLayout
        android:id="@+id/wallet_box"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="vertical"
        android:background="#FFDDDDDD"
        android:gravity="center"
        android:padding="16dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/wallet_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="موجودی کیف پول"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/wallet_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

    <!-- موجودی صندوق سرمایه گذاری -->
    <LinearLayout
        android:id="@+id/investment_box"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="vertical"
        android:background="#FFDDDDDD"
        android:gravity="center"
        android:padding="16dp"
        android:layout_marginBottom="32dp">

        <TextView
            android:id="@+id/investment_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="موجودی صندوق سرمایه گذاری"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/investment_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

    <!-- دکمه عملیات -->
    <Button
        android:id="@+id/btn_operations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="عملیات"
        android:textSize="18sp"
        android:padding="12dp"/>

</LinearLayout>
