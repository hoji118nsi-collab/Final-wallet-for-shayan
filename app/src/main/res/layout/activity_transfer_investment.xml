<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="@drawable/background_transfer_investment">

    <!-- فاصله بالا -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3" />

    <!-- محتوای اصلی -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical"
        android:gravity="center"
        android:spacing="12dp"
        android:background="#88000000"
        android:padding="16dp"
        android:layout_margin="16dp">

        <!-- عنوان باکس مبلغ -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="چقدر میخوای سرمایه‌گذاری کنی؟"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:paddingBottom="12dp"/>

        <!-- ردیف مبلغ + تومان -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/edit_investment_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="number"
                android:hint="مبلغ را وارد کنید"
                android:background="@android:color/transparent"
                android:padding="12dp"
                android:textAlignment="center"
                android:textColor="#FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="تومان"
                android:textColor="#FFFFFF"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"/>
        </LinearLayout>

        <!-- ردیف دکمه‌ها -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btn_transfer_investment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="انتقال"
                android:background="@android:color/transparent"
                android:textColor="#FFFFFF"
                android:padding="12dp"
                android:enabled="false"
                android:alpha="0.5" />

            <Button
                android:id="@+id/btn_cancel_investment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="انصراف"
                android:background="@android:color/transparent"
                android:textColor="#FFFFFF"
                android:padding="12dp" />
        </LinearLayout>

    </LinearLayout>

    <!-- فاصله پایین -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3" />

</LinearLayout>
