<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/add_money_background">

    <!-- فاصله بالا 30% -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3" />

    <!-- محتوای اصلی 40% -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical"
        android:gravity="center"
        android:spacing="12dp">

        <!-- باکس انتخاب نوع پول -->
        <Spinner
            android:id="@+id/spinner_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:spinnerMode="dropdown"
            android:entries="@array/title_options"
            android:padding="12dp"
            android:textAlignment="center"
            android:layout_marginBottom="16dp" />

        <!-- باکس مبلغ + تومان -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/edit_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="number"
                android:hint="مبلغ را وارد کنید"
                android:background="@drawable/button_background"
                android:padding="12dp"
                android:textAlignment="center"
                android:textColor="#FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="تومان"
                android:textColor="#FFFFFF"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"/>
        </LinearLayout>

        <!-- ردیف دکمه‌ها -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btn_confirm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="تایید"
                android:background="@drawable/button_background"
                android:textColor="#FFFFFF"
                android:padding="12dp"
                android:enabled="false" />

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="انصراف"
                android:background="@drawable/button_background"
                android:textColor="#FFFFFF"
                android:padding="12dp" />
        </LinearLayout>

        <!-- پیام موفقیت و دکمه خدایا شکرت (مخفی تا زمان ثبت موفق) -->
        <LinearLayout
            android:id="@+id/success_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_success_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="با موفقیت ثبت شد"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"/>

            <Button
                android:id="@+id/btn_thanks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="خدایا شکرت بابت روزی امروز"
                android:background="@drawable/button_background"
                android:textColor="#FFFFFF"
                android:padding="12dp"
                android:layout_marginTop="12dp"/>
        </LinearLayout>

    </LinearLayout>

    <!-- فاصله پایین 30% -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3" />

</LinearLayout>
