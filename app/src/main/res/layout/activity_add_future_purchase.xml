<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#88000000"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="80%"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#CC000000"
        android:padding="16dp"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:clipToPadding="false">

        <!-- عنوان صفحه -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ثبت مورد جدید"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:paddingBottom="12dp"/>

        <!-- فیلد عنوان خرید -->
        <EditText
            android:id="@+id/edit_purchase_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="عنوان خرید"
            android:textColor="#FFFFFF"
            android:background="@android:color/transparent"
            android:padding="12dp"
            android:textAlignment="viewStart"/>

        <!-- فاصله -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="12dp"/>

        <!-- فیلد مبلغ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/edit_purchase_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="مبلغ"
                android:inputType="number"
                android:background="@android:color/transparent"
                android:padding="12dp"
                android:textColor="#FFFFFF"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="تومان"
                android:textColor="#FFFFFF"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"/>
        </LinearLayout>

        <!-- فاصله -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp"/>

        <!-- ردیف دکمه‌ها -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btn_add_purchase"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ثبت"
                android:background="@android:color/transparent"
                android:textColor="#FFFFFF"
                android:padding="12dp"
                android:enabled="false"
                android:alpha="0.5"/>

            <Button
                android:id="@+id/btn_cancel_purchase"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="انصراف"
                android:background="@android:color/transparent"
                android:textColor="#FFFFFF"
                android:padding="12dp"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
