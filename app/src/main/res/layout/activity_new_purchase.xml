<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/background_new_purchase">

    <!-- فاصله بالا 30% -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3" />

    <!-- محتوای اصلی 40% -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical"
        android:gravity="center"
        android:spacing="12dp">

        <!-- باکس عنوان خرید -->
        <Spinner
            android:id="@+id/spinner_purchase_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:spinnerMode="dropdown"
            android:entries="@array/purchase_title_options"
            android:padding="12dp"
            android:textAlignment="center"
            android:layout_marginBottom="16dp" />

        <!-- دکمه تاریخ خرید -->
        <Button
            android:id="@+id/btn_select_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="تاریخ خرید"
            android:background="@android:color/transparent"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <!-- باکس مبلغ + تومان -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/edit_purchase_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="number"
                android:hint="مبلغ را وارد کنید"
                android:background="@android:color/transparent"
                android:padding="12dp"
                android:textAlignment="center"
                android:textColor="#FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="تومان"
                android:textColor="#FFFFFF"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"/>
        </LinearLayout>

        <!-- ردیف دکمه‌ها -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btn_confirm_purchase"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="تایید"
                android:background="@android:color/transparent"
                android:textColor="#FFFFFF"
                android:padding="12dp"
                android:enabled="false"
                android:alpha="0.5" />

            <Button
                android:id="@+id/btn_cancel_purchase"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="انصراف"
                android:background="@android:color/transparent"
                android:textColor="#FFFFFF"
                android:padding="12dp" />
        </LinearLayout>

        <!-- دکمه خدایا شکرت (پنهان تا زمان ثبت موفق) -->
        <Button
            android:id="@+id/btn_thanks_purchase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="خدایا شکرت بابت روزی امروز"
            android:background="@android:color/transparent"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:layout_gravity="center"
            android:visibility="gone" />

    </LinearLayout>

    <!-- فاصله پایین 30% -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3" />

</LinearLayout>
